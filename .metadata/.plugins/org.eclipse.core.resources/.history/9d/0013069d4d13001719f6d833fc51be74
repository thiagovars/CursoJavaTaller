package Classes;

public class Triangulo {
	private int A;
	private int B;
	private int C;
	
	public Triangulo(int a, int b, int c) {
		this.A = a;
		this.B = b;
		this.C = c;
	}
	
	public int Mayor() {
		int mayor = A;
		if (B > A) {
			mayor = B;
		} else if (C > A) {
			mayor = C;
		}
		return mayor;
	}
	
	public String getTipoTriangulo() {
		if (A == B && A == C) {
			return "Equilatero";
		} else if (A == C || A == B) {
			return "Isosceles";
		} else {
			return "Escaleno";
		}
	}
}
