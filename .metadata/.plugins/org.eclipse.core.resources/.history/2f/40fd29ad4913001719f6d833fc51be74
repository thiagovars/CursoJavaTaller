package Classes;
import java.util.Scanner;

public class Produtos {
	private double suma;
	
	public void ingresarProductos() {
		double sum = 0;
		Scanner scn = new Scanner(System.in);
		System.out.println("ingrese el valor de la primera compra: ");
		String valor = scn.next();
		while (String.valueOf(valor).equals("x")) {
			double valorProduto = Double.valueOf(valor);
			sum =+ valorProduto;
		}
		this.suma = sum;
	}
}
